<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/page_bg"
    tools:context=".MainActivity">

    <RelativeLayout

        android:id="@+id/layout_title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#ffffff"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_personal"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/page_person"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="趣停车"
            android:textColor="#444466"
            android:textSize="25dp"/>

        <Button
            android:id="@+id/btn_qrscan"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/btn_personal"
            android:layout_marginRight="10dp"
            android:background="@mipmap/page_qr"/>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:layout_alignBottom="@id/layout_title"
        android:background="#09bdc5"/>
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="373dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@mipmap/page_dialog"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_horizontal"
            android:text="高新区万达商城停车场"
            android:textColor="#1b1b1b"
            android:textSize="23sp"/>

        <TextView
            android:id="@+id/tv_count"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:background="@mipmap/page_circle"
            android:gravity="center"
            android:text="15"
            android:textColor="#3ebdc6"
            android:textSize="50dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="今天共通行车辆："
                android:textColor="#b4b4c1"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/tv_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15"
                android:textColor="#3ebdc6"
                android:textSize="30dp"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
